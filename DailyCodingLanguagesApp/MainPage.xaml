<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyCodingLanguagesApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#B321F3" Padding="24" CornerRadius="0">
            <Label x:Name ="Date" Text="Date appears here" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name= "Language" Text="No Language Valid" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="Info" Text="No information found" FontSize="16" Padding="30,0,30,0" />
        <Label x:Name="Question" Text="Question not found" FontSize="20" Padding="30,0,30,0"  FontAttributes="Bold"/>
        <Button Text="My github!" Clicked="Button_Clicked">
        </Button>
    </StackLayout>

</ContentPage>
