<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyCodingLanguagesApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#B321F3" Padding="24" CornerRadius="0">
            <Label Text="Coding Information" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name= "Language" Text="Lisp" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Lisp is the programming language of all days! In lisp you can add two numbers together like so:" FontSize="16" Padding="30,0,30,0" />
        <Label FontSize="20" Padding="30,0,30,0" Text="+ 1 2 =" FontAttributes="Bold"/>
        <Button Text="Click!" Clicked="Button_Clicked">
        </Button>
    </StackLayout>

</ContentPage>
